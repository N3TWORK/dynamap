{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "$id": "lsi.schema.json",
    "description": "Local Secondary Index definition",
    "required": [
        "index",
        "hashKey"
    ],
    "properties": {
        "index": {
            "description": "The name global secondary index",
            "type": "string"
        },
        "hashKey": {
            "description": "The name of the field to use as the hash key",
            "type": "string"
        },
        "rangeKey": {
            "description": "The name of the field to use as the range key",
            "type": "string"
        }
    }
}